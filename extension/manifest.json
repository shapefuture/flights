{
  "manifest_version": 3,
  "name": "Flight Finder Helper",
  "version": "0.1.0",
  "description": "Enhance your flight search experience by fetching real-time data from Google Flights",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.google.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost:*/*"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}